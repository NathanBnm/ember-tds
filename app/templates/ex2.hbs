{{outlet}}
<div class="card bg-info text-white text-center mx-auto w-50 mb-5 mt-5">
  <div class="card-body">
    <h1>Services</h1>
    <div class="alert alert-info text-left">
      Choisissez les éléments à inclure<br>
      <strong>
        {{plural model.countActive "élément sélectionné"  "élément sélectionné" "éléments sélectionnés"}}
      </strong>
    </div>
    {{#each model.services as | service |}}
      <div class="card bg-secondary border-info mt-1 mb-1" {{action "toggleActive" service}}>
        <div class="card-body btn {{if service.active "btn-success" "btn-secondary"}} font-weight-bold">
          <div class="float-left">{{service.name}}</div>
          <div class="float-right">{{format-currency service.price "€"}}</div>
        </div>
      </div>
    {{/each}}
    <hr class="bg-white">
    <div class="card bg-info border-info font-weight-bold">
      <div class="card-body">
        <div class="float-left">Total :</div>
        <div class="float-right">
          {{format-currency model.sumActive "€"}}
        </div>
      </div>
    </div>
    <form>
      <div class="form-group">
        <label class="sr-only" for="inlineFormInputGroup">Code promo</label>
        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <div class="input-group-text">
              <div class="col-auto">
                <div class="form-check mb-2">
                  <Input class="form-check-input" type="checkbox" id="autoSizingCheck"></Input>
                  <label class="sr-only" for="autoSizingCheck">
                    Utiliser ce code promo
                  </label>
                </div>
              </div>
            </div>
          </div>
          <Input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Code promo"></Input>
        </div>
      </div>
    </form>
    <div class="card bg-info border-info font-weight-bold">
      <div class="card-body">
        <div class="float-left">Remise :</div>
        <div class="float-right">
          ---
        </div>
      </div>
    </div>
    <div class="card bg-info border-info font-weight-bold">
      <div class="card-body">
        <div class="float-left">Total avec remise :</div>
        <div class="float-right">
          ---
        </div>
      </div>
    </div>
  </div>
</div>