<div class="card bg-light mb-3">
  <div class="card-header">Ex 1 : Application Note</div>
  <div class="card-body">
    <h5 class="card-title">Note :</h5>
    <div class="form-group">
      <Textarea class="form-control" maxlength={{model.MAX}} placeholder="Entrez votre texte" @value={{model.content}}></Textarea>
    </div>
    <div class="form-group">
      <button type="button" class="btn btn-primary" {{action "save" model}}>Enregistrer</button>
      <button type="button" class="btn btn-secondary" {{action "clear" model}}>Effacer</button>
    </div>
    <div class="alert {{model.style}}">
      Nombre de caract√®res restants : {{model.size}}
    </div>
    {{#if model.alertVisible}}
    <div class="alert alert-success">{{model.info}}</div>
    {{/if}}
  </div>
</div>

{{outlet}}