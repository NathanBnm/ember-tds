<LinkTo @route="project" @model={{modeL.project.id}}>
  <h1 class="ui header">
    <i class="folder open icon"></i>
    <span class="content">
      {{model.project.name}}
      <span class="sub header">{{model.project.description}}</span>
    </span>
  </h1>
</LinkTo>
<div class="ui segment">
  <h2>Stories</h2>
  <a class="ui button">
    <i class="icon plus"></i>
    Ajouter une story au projetâ€¦
  </a>
  <table class="ui selectable single line table">
    <tbody>
    {{#each model.stories as |story|}}
      <tr>
        <td>
          <h4 class="ui header">
            <i class="file icon"></i>
            <div class="content">
              {{story.code}}
              <div class="sub header">{{story.description}}</div>
            </div>
          </h4>
        </td>
      </tr>
    {{else}}
      <tr>
        <td colspan="2" class="center aligned">Aucune story</td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>
{{outlet}}